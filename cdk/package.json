{
  "name": "@runmorph/cdk",
  "version": "0.0.7",
  "description": "Moprh Connector Development Kit - A powerful toolkit for building and managing unified thrid-party connectors",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "morph": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run clean && npm run build:bundle && npm run build:obfuscate && npm run build:types && npm run postbuild",
    "build:bundle": "esbuild src/index.ts --bundle --minify --platform=node --outfile=dist/index.js && esbuild src/cli.ts --bundle --minify --platform=node --outfile=dist/cli.js",
    "build:obfuscate": "javascript-obfuscator dist/index.js --output dist/index.js && javascript-obfuscator dist/cli.js --output dist/cli.js",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "clean": "rm -rf ./dist",
    "fix": "run-p fix:*",
    "fix:lint": "eslint --fix src/",
    "fix:format": "prettier --write \"**/*.{ts,tsx,md}\" --ignore-path ../.gitignore",
    "validate": "run-p validate:*",
    "validate:format": "prettier --list-different \"**/*.{ts,tsx,md}\" --ignore-path ../.gitignore",
    "validate:lint": "eslint --max-warnings=0 src/",
    "validate:typecheck": "tsc --noEmit",
    "postbuild": "chmod +x dist/cli.js"
  },
  "peerDependencies": {
    "@runmorph/resource-types": "*"
  },
  "devDependencies": {
    "@runmorph/resource-types": "*",
    "esbuild": "^0.14.54",
    "javascript-obfuscator": "^4.0.0",
    "typescript": "^4.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "connector",
    "development",
    "kit",
    "sdk",
    "api",
    "integration"
  ],
  "author": "Henri Chabrand (https://www.linkedin.com/in/henri-chabrand--product-manager)",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "http://runmorph.dev",
  "bugs": {
    "url": "https://github.com/run-morph"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "private": false,
  "preferGlobal": true
}
